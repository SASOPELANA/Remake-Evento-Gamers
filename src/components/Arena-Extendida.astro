---
// Importamos la traducción de los idiomas
import { getI18n } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18n({ currentLocale });

import { Image } from "astro:assets";
import imgJuego1 from "@/assets/images/arena/kof-vx.webp";
import imgJuego2 from "@/assets/images/arena/kof-02.webp";
import imgJuego3 from "@/assets/images/arena/capcom-snk-2.webp";
import imgJuego4 from "@/assets/images/arena/samurai-sadow.webp";
import imgJuego5 from "@/assets/images/arena/gg-xrd.webp";
import imgJuego6 from "@/assets/images/arena/goku.webp";
import imgJuego7 from "@/assets/images/arena/mortal-11.webp";
import imgJuego8 from "@/assets/images/arena/fafa.webp";

const CARTAS = [
  { img: imgJuego1, title: "KOF XV" },
  { img: imgJuego2, title: "KOF 2002" },
  { img: imgJuego3, title: "SNK VS CAPCOM 2" },
  { img: imgJuego4, title: "SAMURAI SHADOW" },
  { img: imgJuego5, title: "GGXX XRD REVE 2" },
  { img: imgJuego6, title: "DRAGON BALL FIGHTER Z" },
  { img: imgJuego7, title: "MORTAL KOMBAT 11" },
  { img: imgJuego8, title: "FIFA FC25" },
];
---

<section
  id="arena"
  class="bg-white mb-10 mt-10 sm:mb-15 sm:mt-15 sm:ms-8 sm:me-8 me-2 ms-2 rounded-xl"
>
  {/* Contenedor para el título y las cartas (oculto por defecto) */}

  <div id="content" class="hidden">
    <h2
      class="text-center text-5xl font-bold relative sm:text-8xl sm:pt-10 lg:pt-10 pt-10"
    >
      <span class="text-transparent [-webkit-text-stroke:2px_#000] opacity-70"
        >{i18n.EXTENDED_ARENA.TITLE}</span
      >
    </h2>

    <!-- Contenedor de cartas - Versión responsiva -->
    <div
      class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-4 gap-2 sm:gap-3 md:gap-4 lg:gap-6 justify-center max-w-screen-2xl mx-auto sm:px-6 md:px-10 lg:px-20 py-10 sm:py-16 md:py-20"
    >
      {
        CARTAS.map((cartas) => (
          <div class="flex items-center gap-3 sm:gap-2 p-1 sm:p-1.5 md:p-2 rounded-lg sm:rounded-xl border border-black bg-gray-100 h-16 sm:h-18 md:h-20 lg:h-24 w-40 sm:w-36 md:w-48 lg:w-60 xl:w-80 mx-auto">
            <div class="relative h-12 w-12 sm:h-14 sm:w-14 md:h-16 md:w-16 overflow-hidden rounded-md sm:rounded-lg shrink-0">
              <div
                class="absolute inset-0"
                style="background: radial-gradient(68.76% 51.23% at 51.23% 51.38%, #FFFAEB 47%, #D8AB17 100%)"
              />
              <Image
                src={cartas.img}
                alt={cartas.title}
                class="object-cover size-full relative pt-0.5 sm:pt-1 px-0.5 sm:px-1"
                loading="lazy"
                draggable="false"
              />
            </div>

            <p class="text-xs sm:text-sm md:text-base font-bold text-black text-pretty text-center line-clamp-2 pl-0.5 sm:pl-1 md:pl-2 lg:pl-4">
              <strong>{cartas.title}</strong>
            </p>
          </div>
        ))
      }
    </div>
  </div>

  <!-- Botón de toggle -->
  <div class="w-full max-w-screen-2xl mx-auto pt-4 pb-20">
    <button
      id="toggleButton"
      class="group grid w-full grid-cols-3 items-center gap-16 rounded-xl border border-black p-1 md:pl-32"
      style="grid-template-columns: auto 1fr auto; background: linear-gradient(90deg, #e1e4e8 0%, #f4f5f3 45%)"
      aria-label="Ver alineación extendida"
    >
      <span></span>

      <span
        id="buttonText"
        class="info w-full text-sm md:text-xl font-bold text-center text-black"
      >
        {i18n.EXTENDED_ARENA.BOTTON.TITLE_1}
      </span>

      <span class="relative">
        <!-- Flecha hacia abajo (oculta por defecto) -->
        <svg
          id="downArrow"
          width="64"
          height="52"
          viewBox="0 0 64 52"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          class="absolute inset-0 opacity-0 duration-300"
        >
          <rect width="64" height="52" rx="15" fill="#D8AB17"></rect>
          <path d="M19 19.5L32 32.5L32 24.7963L19 19.5Z" fill="#000025"></path>
          <path d="M45 19.5L32 32.5L32 24.7963L45 19.5Z" fill="#000025"></path>
        </svg>

        <!-- Flecha hacia arriba (visible por defecto) -->
        <svg
          id="upArrow"
          width="64"
          height="52"
          viewBox="0 0 64 52"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          class="opacity-100 duration-300"
        >
          <rect width="64" height="52" rx="15" fill="#D9D9D9"></rect>
          <path d="M19 32.5L32 19.5L32 27.2037L19 32.5Z" fill="#D8AB17"></path>
          <path d="M45 32.5L32 19.5L32 27.2037L45 32.5Z" fill="#D8AB17"></path>
        </svg>
      </span>
    </button>
  </div>
</section>

<script
  is:inline
  define:vars={{
    title1: i18n.EXTENDED_ARENA.BOTTON.TITLE_1,
    title2: i18n.EXTENDED_ARENA.BOTTON.TITLE_2,
  }}
>
  const handleArenaPageLoad = () => {
    const toggleButton = document.getElementById("toggleButton");
    const content = document.getElementById("content");
    const buttonText = document.getElementById("buttonText");
    const downArrow = document.getElementById("downArrow");
    const upArrow = document.getElementById("upArrow");

    if (toggleButton && content && buttonText) {
      // Remover listener previo para evitar duplicados si se re-ejecuta
      const newClickHandler = () => {
        const isHidden = content.classList.toggle("hidden");

        buttonText.textContent = isHidden ? title1 : title2;

        if (downArrow && upArrow) {
          downArrow.classList.toggle("opacity-100", isHidden);
          downArrow.classList.toggle("opacity-0", !isHidden);
          upArrow.classList.toggle("opacity-100", !isHidden);
          upArrow.classList.toggle("opacity-0", isHidden);
        }
      };

      // Limpiar click listener anterior clonando el botón (hack rápido y efectivo para eliminar todos los listeners)
      // O mejor, simplemente asignamos onclick que sobrescribe el anterior.
      toggleButton.onclick = newClickHandler;

      // Forzar estado inicial del botón
      buttonText.textContent = content.classList.contains("hidden")
        ? title1
        : title2;
    }
  };

  // Limpiar listener anterior de astro:page-load si existe
  if (window.arenaPageLoadHandler) {
    document.removeEventListener(
      "astro:page-load",
      window.arenaPageLoadHandler,
    );
  }

  window.arenaPageLoadHandler = handleArenaPageLoad;
  document.addEventListener("astro:page-load", window.arenaPageLoadHandler);
</script>
