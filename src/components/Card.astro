---
import imgJuego1 from "../../public/arena/gg-strive.webp";
import imgJuego2 from "../../public/arena/sf6.webp";
import imgJuego3 from "../../public/arena/mortal-1.webp";
import imgJuego4 from "../../public/arena/granblue-fantasy.webp";
import imgJuego5 from "../../public/arena/teken-8.webp";
import imgJuego6 from "../../public/arena/fatal-fury.webp";
import imgJuego7 from "../../public/arena/under-night.webp";
import imgJuego8 from "../../public/arena/marvel-capcom2.webp";

const CARTAS = [
  {
    img: imgJuego1,
    title: "GUILTY GEAR - STRIVE",
  },

  {
    img: imgJuego2,
    title: "STREET FIGHTER 6",
  },

  {
    img: imgJuego3,
    title: "MORTAL KOMBAT 1",
  },
  {
    img: imgJuego4,
    title: "GRANBLUE FANTASY VERSUS: RISING",
  },
  {
    img: imgJuego5,
    title: "TEKEN 8",
  },
  {
    img: imgJuego6,
    title: "FATAL FURY: CITY OF THE WOLVES",
  },
  {
    img: imgJuego7,
    title: "UNDER NIGHT IN-BIRTH II SYS:CELES",
  },
  {
    img: imgJuego8,
    title: "MARVEL VS CAPCOM 2",
  },
];
---
<section class="bg-white mb-10 mt-10 sm:mb-15 sm:mt-15 sm:ms-8 sm:me-8 me-2 ms-2 rounded-xl">
  <h2 class="text-center text-5xl font-bold relative sm:text-8xl sm:pt-32 lg:pt-40 pt-20">
  <span class="text-transparent [-webkit-text-stroke:2px_#000] opacity-70">Arena de Juegos</span>
</h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 justify-center p-15 sm:p-25 sm:pt-32 pt-20">
    {CARTAS.map((cartas) => (
      <div 
       
      class="max-w-[320px] h-[420px] mx-auto bg-white/80 border border-black rounded-lg shadow-sm overflow-hidden flex flex-col"
      >
      <!-- Imagen con altura fija -->
      <div class="pt-4 px-4">
        <img 
          class="w-full h-64 object-cover object-top rounded-xl
          bg-gradient-to-r from-yellow-400 via-white via-50% to-yellow-500 
          " 
          src={cartas.img.src} 
          alt={cartas.title}
  />
      </div>

        <!-- Contenedor de texto con altura fija -->
        <div class="p-4 flex-1 flex items-center justify-center min-h-[120px]">
          <p class="text-xl font-bold text-black text-center line-clamp-2">
            {cartas.title}
          </p>
        </div>
      </div>
    ))}
  </div>
</section>
