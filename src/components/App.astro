---
import Layout from '../layouts/Layout.astro';
import Carrusel from '../components/Carrusel.astro';
import ContadorTiempo from '../components/ContadorTiempo.astro';
import SobreNosotros from '../components/SobreNosotros.astro';
import CardJuegos from '../components/Card.astro';
import Galeria from '../components/Gallery.astro';
import Video from '../components/Video.astro';
import Footer from '../components/Footer.astro';

// Importamos la traducci√≥n de los idiomas
import { getI18n } from '../i18n/';

const { currentLocale } = Astro;
const i18n = getI18n({ currentLocale });
---

<Layout
  title={i18n.SEO_TITLE_1}
  description={i18n.SEO_DESCRIPTION_1}
  icons="/ino.webp"
>
  <Carrusel />
  <ContadorTiempo />
  <SobreNosotros />
  <CardJuegos />
  <Galeria />
  <Video />
  <Footer />
</Layout>
